{
  "name": "fmc-website",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite dev --force",
    "test": "tsc && prettier --check . && vitest run",
    "build": "vite build",
    "preview": "vite build && vite preview",
    "format": "prettier --write .",
    "ship": "vite build && wrangler deploy",
    "types": "wrangler types --include-runtime false --strict-vars false",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "@std/front-matter": "jsr:^1.0.9",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "p-limit": "^6.2.0",
    "rwsdk": "0.2.0-alpha.14",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.4",
    "@cloudflare/workers-types": "^4.20250813.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/markdown-it": "^14.1.2",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "daisyui": "^5.0.50",
    "dotenv": "^17.2.1",
    "fast-glob": "^3.3.3",
    "mime-types": "^3.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.29.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "7"
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none"
  }
}
